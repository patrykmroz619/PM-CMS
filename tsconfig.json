{
  "compilerOptions": {
    "outDir": "./build",
    "target": "es5",
    "module": "esnext",
    "jsx": "react",
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@views/*": ["./components/views/*"],
      "@myStyled": ["./style"],
      "@common": ["./components/common"],
      "@assets/*": ["./assets/*"],
      "@validators/*": ["./validators/*"],
      "@api/*": ["./api/*"],
      "@selectors": ["./store/selectors"],
      "@fetch": ["./store/fetch"],
      "@utils/*": ["./utils/*"],
      "@testHelpers": ["./__test__/helpers"],
      "@mocks/*": ["./__mocks__/*"],
      "@hooks": ["./hooks"]
    }
  },
  "include": ["src/", "src/@types/"]
}
