{
  "compilerOptions": {
    "outDir": "./build",
    "target": "es5",
    "module": "es6",
    "jsx": "react",
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@views/*": ["./views/*"],
      "@myStyled": ["./style"],
      "@common": ["./common"],
      "@assets/*": ["./assets/*"]
    }
  },
  "include": ["src/", "src/custom.d.ts"]
}
